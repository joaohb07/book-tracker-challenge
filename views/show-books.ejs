<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Book Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <style>
    body{height: 100vh;} 
    .container{height: 100%;}
  </style>
</head>
<body>

<div class="container d-flex flex-column align-items-center justify-content-center">
    <div class="shadow-lg card bg-dark">
        <div class="card-body">
            <table class="table table-light table-borderless table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <td>Title</td>
                        <td>Author</td>
                        <td>Added Date</td>
                        <td>Status</td>
                        <td>Conclusion Date</td>
                        <td>Rating</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(details) { %>
                        <tr>
                            <td><%= details.title %></td>
                            <td><%= details.author %></td>
                            <td><%= details.added_date %></td>
                            <td><%= details.status %></td>
                            <td><%= details.conclusion %></td>
                            <td><%= details.rating %></td>
                            <td><a class="btn btn-outline-dark" href="/edit/<%= details._id %>">Edit</a>&nbsp;<a class="btn btn-outline-danger" href="/delete/<%= details._id %>">Delete</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="d-grid gap-2">
                <a class="btn btn-primary" href="/">Register new</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>